<%- include('partials/header'); %> 

<div class="ui main text container">
    <div class="ui huge header"><h1>REST Blog App</h1></div>
        <div class="ui top attached segment">
            <div class="ui divided items">
            <% blogs.forEach(element => { %>
                <div class="item">
                    <div class="image"><img src="<%= element.image %> " alt=""></div>
                    <div class="content">
                        <a href="/blogs/<%= element._id %>" class="header"><%= element.title %></a>
                        <div class="meta"><span><%= element.created.toDateString() %></span></div>
                        <div class="description"><p><%- element.body.substring(0,100) %> ...</p></div>         
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%= element._id %>">
                                Read More
                                <i class="chevron icon right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<%- include('partials/footer'); %> 